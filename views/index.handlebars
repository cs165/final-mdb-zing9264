<body>
<!-- TODO(you): Add the HTML necessary to complete your final project. -->
<header class="">
    <span> CREATE  or  LORD your JOURNAL</span>
    <div class="home">
        <br>
        <button class="creatbtn">CREATE A NEW JOURNAL</button>
        <br>
        <button class="loadbtn">LOAD AN OLD JOURNAL</button>
        <br>
        <div id="savedDiary" class="loadzone inactive">
        </div>
    </div>
</header>


<div class="display-journal inactive ">
    <main>
        <div class="date">
            {{date-view}}
        </div>
        <div class="title">
            {{title-view}}
        </div>
        <form class="context" method="post">
            <textarea id="styled" class="textarea" onfocus="setbg('#e5fff3');settextarea(1); " onblur="setbg('white');settextarea(0);" style="background: white;">{{Content}}</textarea>
        </form>
    </main>
    <footer>
        <div class="UIbar default">
            <button class="btn back"><<</button>
            <button class="today">GO Today</button>
            <button class="btn forward">>></button>
        </div>
    </footer>
</div>

</body>
